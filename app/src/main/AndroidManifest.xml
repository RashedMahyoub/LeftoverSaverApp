<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.snipertech.leftoversaverapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".view.SplashScreenActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.RegisterActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.volunteer.VolunteerActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.donor.DonorActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.needy.NeedyActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.donor.DonorAddItemActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.needy.NeedyRestItemActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.needy.NeedyRestaurantActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".view.donor.DonorMainScreenFragment" />
    </application>

</manifest>